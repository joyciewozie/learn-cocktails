<%= simple_form_for cocktail do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :base, label: 'Base Liquor:' %>
  <%= f.input :notes, label: 'About' %>
  <%= f.input :ingredients %>
  <%= f.input :how_to_make %>
  <%= f.input :status, collection: Cocktail::STATUSES, label: 'Notes' %>
  <%= f.input :method, collection: Cocktail::METHODS %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-primary', label: 'Add' %>

<% end %>
